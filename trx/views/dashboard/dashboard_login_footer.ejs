<script>
		new Vue({
        el: '#q-app',
        data: function () {
          return {
            username: '',
            password: ''
          }
        },
        methods: {
          submit: function(){
            const self = this;
            $.post("/login", {username: this.username, password: this.password})
              .done(function(data){
                window.location.replace("/admin");
              }).catch(function(){
                self.$q.notify({ message:  'Unable to log-in', timeout: 3000, type: 'negative', 
                  color: 'negative', textColor: 'white', position: 'top-right', detail: 'Please try again'});
              });
          }
        },
        beforeMount(){
            Quasar.i18n.set(Quasar.i18n.zhHans)
        }
      })
    </script>
</body>
</html>